#!/usr/bin/env node

"use strict";

const { execFileSync } = require("child_process");
const path = require("path");

const PLATFORMS = {
  "darwin arm64": "@actionbookdev/actionbook-rs-darwin-arm64",
  "darwin x64": "@actionbookdev/actionbook-rs-darwin-x64",
  "linux x64": "@actionbookdev/actionbook-rs-linux-x64",
  "linux arm64": "@actionbookdev/actionbook-rs-linux-arm64",
  "win32 x64": "@actionbookdev/actionbook-rs-win32-x64",
  "win32 arm64": "@actionbookdev/actionbook-rs-win32-arm64",
};

function getBinaryPath() {
  const platformKey = `${process.platform} ${process.arch}`;
  const pkg = PLATFORMS[platformKey];

  if (!pkg) {
    throw new Error(
      `Unsupported platform: ${process.platform} ${process.arch}\n` +
        `Supported platforms: ${Object.keys(PLATFORMS).join(", ")}`
    );
  }

  const binaryName = process.platform === "win32" ? "actionbook.exe" : "actionbook";

  try {
    return path.join(
      path.dirname(require.resolve(`${pkg}/package.json`)),
      "bin",
      binaryName
    );
  } catch {
    throw new Error(
      `Could not find the native binary for your platform (${platformKey}).\n` +
        `The package "${pkg}" may not be installed.\n\n` +
        `Try reinstalling:\n` +
        `  npm install -g @actionbookdev/actionbook-rs\n\n` +
        `If that doesn't work, you can install the Rust CLI directly:\n` +
        `  cargo install actionbook`
    );
  }
}

try {
  const binaryPath = getBinaryPath();
  execFileSync(binaryPath, process.argv.slice(2), {
    stdio: "inherit",
  });
} catch (err) {
  if (err.status !== undefined) {
    // Binary exited with a non-zero code â€” forward it
    process.exit(err.status);
  }
  console.error(err.message);
  process.exit(1);
}
